// https://aka.ms/devcontainer.json
{
  "name": "Ubuntu 24.04 with Bazel",
  "image": "ubuntu:24.04",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/cs,type=bind",
  "workspaceFolder": "/workspaces/cs",
  "customizations": {
    "vscode": {
      "extensions": [
        "xaver.clang-format",
        "ms-vscode.cpptools-extension-pack",
        "GitHub.copilot",
        "ms-python.python",
        "ms-dotnettools.csharp",
        "julialang.language-julia",
        "GitHub.vscode-github-actions",
        "ms-vscode.makefile-tools",
        "ms-azuretools.vscode-docker",
        "ms-vscode.cpptools",
        "ms-python.black-formatter",
        "ms-azuretools.vscode-containers",
        "vscjava.vscode-java-pack",
        "golang.go",
        "tomoki1207.pdf"
      ],
      "settings": {
        "C_Cpp.default.launchConfiguration": ".devcontainer/launch.json"
      }
    }
  },

  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "nodeGypDependencies": true,
      "installYarnUsingApt": false
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.13"
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.22.7"
    },
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "jdkDistro": "ms"
    },
    "ghcr.io/devcontainers/features/dotnet:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/rust:1": {
      "version": "latest"
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  // "forwardPorts": [],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "make devcontainer-postCreateCommand",

  "remoteEnv": {
    "USE_BAZEL_VERSION": "8.4.2"
  },

  // Allow the devcontainer to talk to the host Docker daemon.
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ],

  // Configure tool-specific properties.
  // "customizations": {},

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "root"
}
